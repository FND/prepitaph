#!/usr/bin/env bash

set -eu

realpath() {
	filepath="${1:?}"

	node -r fs -p "fs.realpathSync(process.argv[1])" "$filepath"
}

abort() {
	message="$@"

	echo "$message" >&2
	exit 1
}

root_dir=`dirname "$0"`
root_dir=`realpath "$root_dir/.."`
local_dir="$root_dir/dist"
target="prepitaph.org:~/public_html/prepitaph/"

cd "$root_dir"

git diff --exit-code --quiet && \
		git diff --cached --exit-code --quiet || \
		abort "ERROR: there are unstaged changes"
git ls-files --others --exclude-standard | grep --quiet content && \
		abort "ERROR: there is untracked content"

npm run rebuild

cd "$local_dir"
rsync -a --delete -c -P -z -e ssh ./ "$target"

read -r -n1 -p "enter 'y' to push repository updates: " confirmation; echo
if [ "$confirmation" = "y" ]; then
	git push
fi
